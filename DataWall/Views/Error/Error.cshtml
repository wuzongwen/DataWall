@using Common
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex,nofollow">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-size: 14px;
            font-family: 'helvetica neue',tahoma,arial,'hiragino sans gb','microsoft yahei','Simsun',sans-serif;
            background-color: #fff;
            color: #808080;
        }

        .wrap {
            margin: 200px auto;
            width: 510px;
        }

        td {
            text-align: left;
            padding: 2px 10px;
        }

            td.header {
                font-size: 22px;
                padding-bottom: 10px;
                color: #000;
            }

            td.check-info {
                padding-top: 20px;
            }

        a {
            color: #328ce5;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="wrap">
        <table>
            <tr>
                <td rowspan="5" style=""><img src="@Url.Content("~/Content/Admin/static/images/error.jpg")" alt="错误页面"></td>
                <td class="header">@(ViewBag.Title)</td>
            </tr>
            <tr><td>@(ViewBag.Content)</td></tr>
        </table>
    </div>
</body>
</html>
